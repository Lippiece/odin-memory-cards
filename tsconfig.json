{
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "watch": true,
    "watchFile": "dynamicPriorityPolling",
    "watchDirectory": "dynamicPriorityPolling",
    "types": [
      "node",
    ],
    "target": "ESNext",
    "strictFunctionTypes": true,
    "strict": true,
    "module": "ESNext",
    "pretty": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "incremental": true,
  }
}
